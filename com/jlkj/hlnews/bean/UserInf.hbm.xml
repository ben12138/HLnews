<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
  <class name="com.jlkj.hlnews.bean.UserInf" table="userinf">
        <id name="id" column="id">
            <generator class="native"></generator>
        </id>
        <property name="username" column="username"></property>
        <property name="password" column="password"></property>
        <property name="nickname" column="nickname"></property>
        <property name="birthday" column="birthday"></property>
        <property name="sex" column="sex"></property>
        <property name="introduction" column="introduction"></property>
        <property name="imageUrl" column="imageUrl"></property>
    </class>
</hibernate-mapping>