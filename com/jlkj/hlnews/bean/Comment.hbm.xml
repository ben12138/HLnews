<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
  <class name="com.jlkj.hlnews.bean.Comment" table="comment">
        <id name="id" column="id" type="java.lang.Integer">
            <generator class="native"></generator>
        </id>
        <property name="sponsor" column="sponsor" type="java.lang.Integer"></property>
        <property name="content" column="content" type="java.lang.String"></property>
        <property name="baoliaoid" column="baoliaoid" type="java.lang.Integer"></property>
    </class>
</hibernate-mapping>